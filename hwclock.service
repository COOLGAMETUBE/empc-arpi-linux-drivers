[Unit]
Description=Restore / save the current hw clock
Documentation=man:hwclock(8)
DefaultDependencies=no
Before=sysinit.target
Conflicts=shutdown.target

[Service]
EnvironmentFile=-/etc/default/fake-hwclock
ExecStartPre=/bin/echo "mcp7940x 0x6f" > /sys/class/i2c-adapter/i2c-1/new_device
ExecStart=/sbin/hwclock --hctosys
ExecStop=/sbin/hwclock --systohc -D --noadjfile --utc
Type=oneshot
RemainAfterExit=yes

[Install]
WantedBy=sysinit.target
